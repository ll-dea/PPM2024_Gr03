<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Profile Section -->

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:contentDescription="Profile Photo"
        android:focusable="true"
        android:onClick="onProfileImageClick"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hello, [User's Name]!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/profileImageView"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        app:layout_constraintTop_toTopOf="@id/profileImageView"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Invoices Button -->

    <!-- Table 1 Button -->
    <Button
        android:id="@+id/InvoicesButton"
        style="@style/CustomButtonStyle"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:onClick="onTableSelected"
        android:tag="1"
        android:text="Invoices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/table_1"
        style="@style/CustomButtonStyle"
        android:layout_width="298dp"
        android:layout_height="114dp"
        android:onClick="onTableSelected"
        android:tag="1"
        android:text="Table 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/InvoicesButton"
        tools:ignore="MissingConstraints" />

    <!-- Table 2 Button -->
    <Button
        android:id="@+id/table_2"
        style="@style/CustomButtonStyle"
        android:layout_width="314dp"
        android:layout_height="118dp"
        android:onClick="onTableSelected"
        android:tag="2"
        android:text="Table 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_1"
        tools:ignore="MissingConstraints" />

    <!-- Table 3 Button -->
    <Button
        android:id="@+id/table_3"
        style="@style/CustomButtonStyle"
        android:layout_width="322dp"
        android:layout_height="113dp"
        android:onClick="onTableSelected"
        android:tag="3"
        android:text="Table 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_2"
        tools:ignore="MissingConstraints" />

    <!-- Table 4 Button -->
    <Button
        android:id="@+id/table_4"
        style="@style/CustomButtonStyle"
        android:layout_width="331dp"
        android:layout_height="122dp"
        android:onClick="onTableSelected"
        android:tag="4"
        android:text="Table 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
